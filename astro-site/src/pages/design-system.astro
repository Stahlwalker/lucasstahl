			<!-- Typography -->
			<section id="typography" class="design-system-section">
				<h2 class="section-title">Typography</h2>
				<p class="section-description">
					Two primary typefaces: Fira Code for code and monospace elements, Inter for body text and UI.
				</p>

				<!-- Fira Code -->
				<div class="typography-specimen">
					<h3 class="typography-name">Fira Code</h3>
					<p class="typography-usage">Monospace 路 Code blocks 路 Technical elements</p>
					<div class="typography-sample fira-code-sample">
						<span class="sample-label">Regular 400</span>
						<p class="sample-text-fira">const greeting = "Hello, World!";</p>
					</div>
					<div class="typography-sample fira-code-sample">
						<span class="sample-label">Medium 500</span>
						<p class="sample-text-fira font-weight-500">const greeting = "Hello, World!";</p>
					</div>
					<div class="typography-sample fira-code-sample">
						<span class="sample-label">Semibold 600</span>
						<p class="sample-text-fira font-weight-600">const greeting = "Hello, World!";</p>
					</div>
				</div>

				<!-- Inter -->
				<div class="typography-specimen">
					<h3 class="typography-name">Inter</h3>
					<p class="typography-usage">Sans-serif 路 Body text 路 UI elements</p>
					<div class="typography-sample inter-sample">
						<span class="sample-label">Regular 400</span>
						<p class="sample-text-inter">The quick brown fox jumps over the lazy dog</p>
					</div>
					<div class="typography-sample inter-sample">
						<span class="sample-label">Medium 500</span>
