	<script>
		// Load more blog posts functionality
		const ITEMS_PER_LOAD = 10;

		function initLoadMore() {
			const blogItems = Array.from(document.querySelectorAll('[data-blog-item]'));
			const loadMoreBtn = document.getElementById('load-more-btn');

			// Initially hide all blog items beyond the first 10
			blogItems.forEach((item, index) => {
				if (index >= ITEMS_PER_LOAD) {
					item.style.display = 'none';
				}
			});

			const remainingCount = blogItems.length - ITEMS_PER_LOAD;
			if (remainingCount <= 0 && loadMoreBtn) {
				loadMoreBtn.style.display = 'none';
			}

			// Load more click handler
			loadMoreBtn?.addEventListener('click', () => {
				const hiddenItems = blogItems.filter(item => item.style.display === 'none');
				const itemsToShow = hiddenItems.slice(0, ITEMS_PER_LOAD);

				itemsToShow.forEach(item => {
					item.style.display = 'block';
					item.style.opacity = '0';
					item.style.transform = 'translateY(20px)';

					setTimeout(() => {
						item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
						item.style.opacity = '1';
						item.style.transform = 'translateY(0)';
					}, 50);
				});

				const newRemainingCount = hiddenItems.length - itemsToShow.length;
				if (newRemainingCount <= 0 && loadMoreBtn) {
					loadMoreBtn.style.opacity = '0';
					loadMoreBtn.style.transform = 'translateY(20px)';
					setTimeout(() => {
						loadMoreBtn.style.display = 'none';
					}, 300);
				}
			});
		}

		document.addEventListener('DOMContentLoaded', initLoadMore);
	</script>
