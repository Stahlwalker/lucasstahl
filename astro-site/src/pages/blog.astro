	<!-- Critical CSS for LCP - Inline for faster render -->
	<style slot="head">
		@keyframes fadeInUp {
			from {
				opacity: 0;
				transform: translateY(30px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.blog-hero {
			background: transparent;
			padding: 6rem 2rem 3rem;
			text-align: center;
		}

		.blog-hero-title {
			font-family: 'Fira Code', monospace;
			font-size: 3rem;
			color: var(--text-primary);
			margin-bottom: 1rem;
			font-weight: 700;
			animation: fadeInUp 0.8s ease-out;
		}

		.code-bracket {
			color: var(--accent-primary);
			font-weight: 700;
			letter-spacing: 0.05em;
			font-variant-ligatures: none;
			font-feature-settings: "liga" 0, "calt" 0;
		}

		.blog-hero-subtitle {
			font-size: 1.125rem;
			color: var(--text-secondary);
			max-width: 600px;
			margin: 0 auto;
			animation: fadeInUp 0.8s ease-out 0.2s both;
		}

		/* Mobile optimizations */
		@media (max-width: 768px) {
			.blog-hero {
				padding: 4rem 1rem 2rem;
			}
			.blog-hero-title {
				font-size: 2rem;
			}
			.blog-hero-subtitle {
				font-size: 1rem;
			}
		}

		@media (max-width: 480px) {
			.blog-hero-title {
				font-size: 1.75rem;
			}
			.blog-hero-subtitle {
				font-size: 0.95rem;
			}
		}

		@media (max-width: 360px) {
			.blog-hero-title {
				font-size: 1.5rem;
			}
			.blog-hero-subtitle {
				font-size: 0.9rem;
			}
		}
	</style>
	<!-- Blog Hero Section -->
	<section class="blog-hero">
		<div class="section-container">
			<h1 class="blog-hero-title">
				<span class="code-bracket">&lt;</span>
				Blog
				<span class="code-bracket">/&gt;</span>
			</h1>
			<p class="blog-hero-subtitle">Insights on web development, marketing, and digital strategy</p>
			<a href="/rss.xml" target="_blank" rel="noopener noreferrer" class="rss-subscribe-button">
				<i class="fa-solid fa-rss"></i>
				Subscribe via RSS
			</a>
		</div>
	</section>

