					<a href="https://github.com" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
						<img src="/assets/images/light/GitHub_light.png" alt="GitHub" class="logo-showcase-img logo-light">
						<img src="/assets/images/dark/GitHub_dark.png" alt="GitHub" class="logo-showcase-img logo-dark">
					</a>

					<!-- Gong -->
					<a href="https://www.gong.io/" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
						<img src="/assets/images/light/Gong_2x_light.png" alt="Gong" class="logo-showcase-img logo-light logo-gong">
						<img src="/assets/images/dark/Gong_2x_dark.png" alt="Gong" class="logo-showcase-img logo-dark logo-gong">
					</a>

					<!-- Loom -->
					<a href="https://loom.com" target="_blank" rel="noopener noreferrer" class="logo-showcase-item loom-dark-icon">
						<img src="/assets/images/light/Loom_light.png" alt="Loom" class="logo-showcase-img logo-light">
						<img src="/assets/images/dark/Loom_icon_dark.png" alt="Loom" class="logo-showcase-img logo-dark">
					</a>

					<!-- Notion -->
					<a href="https://notion.so" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
