<script>
	// Conditional Logo Loading - Remove non-active theme logos to save bandwidth
	(function() {
		const logoItems = document.querySelectorAll('.logo-showcase-item');
		const logoCache = []; // Store all logos with their parent references

		// Cache all logo images before any removal
		logoItems.forEach(item => {
			const lightLogo = item.querySelector('.logo-light');
			const darkLogo = item.querySelector('.logo-dark');
			if (lightLogo) logoCache.push({ parent: item, logo: lightLogo, theme: 'light' });
			if (darkLogo) logoCache.push({ parent: item, logo: darkLogo, theme: 'dark' });
		});

		function updateLogos(theme) {
			const activeTheme = theme === 'dark' ? 'dark' : 'light';

			logoCache.forEach(({ parent, logo, theme: logoTheme }) => {
				if (logoTheme === activeTheme) {
					// Show active theme logo
					if (!parent.contains(logo)) {
						parent.appendChild(logo);
					}
				} else {
					// Hide/remove inactive theme logo
					if (parent.contains(logo)) {
						logo.remove();
					}
				}
			});
		}

		// Initial cleanup on page load
		const initialTheme = document.documentElement.getAttribute('data-theme') || 'light';
		updateLogos(initialTheme);

		// Watch for theme changes
		const observer = new MutationObserver((mutations) => {
			mutations.forEach((mutation) => {
				if (mutation.attributeName === 'data-theme') {
					const newTheme = document.documentElement.getAttribute('data-theme');
					updateLogos(newTheme);
				}
			});
		});

		observer.observe(document.documentElement, { attributes: true });
	})();

	// Career Terminal
	const terminalInput = document.getElementById('terminalInput');
	const terminalOutput = document.getElementById('terminalOutput');
	let isTyping = false;
	let timelineComplete = false;

	function sleep(ms) {
		return new Promise(resolve => setTimeout(resolve, ms));
	}

	async function typeText(text, className = 'terminal-line') {
		const line = document.createElement('div');
		line.className = className;
		terminalOutput.appendChild(line);

		for (let i = 0; i < text.length; i++) {
			line.textContent += text[i];
			terminalOutput.parentElement.scrollTop = terminalOutput.parentElement.scrollHeight;
			await sleep(20);
		}
		await sleep(100);
	}

	async function addLine(text, className = 'terminal-line') {
		const line = document.createElement('div');
		line.className = className;
		line.textContent = text;
		terminalOutput.appendChild(line);
		terminalOutput.parentElement.scrollTop = terminalOutput.parentElement.scrollHeight;
		await sleep(50);
	}

	async function showTimeline() {
		if (isTyping) return;
		isTyping = true;
		terminalInput.disabled = true;

		// Remove the "Press Enter" line
		const pressEnterLine = document.querySelector('.press-enter-line');
		if (pressEnterLine) pressEnterLine.remove();

		await addLine('');
		await addLine('─────────────────────────────────────────────────────────');
		await addLine('');
		await typeText('2005-2018      │ Healthcare Marketing (13 years)');
		await addLine('');
		await addLine('─────────────────────────────────────────────────────────');
		await typeText('2018           │ Full Stack Web Development Certificate', 'terminal-line bootcamp');
		await typeText('               │ Northwestern University');
		await addLine('─────────────────────────────────────────────────────────');
		await addLine('');
		await typeText('2018           │ → Developer Marketing (7 years)', 'terminal-line transition');
		await addLine('');
		await typeText('2018-2021      │ HERE Technologies');
		await typeText('2021-2022      │ Contentful');
		await typeText('2022-2023      │ Pangea');
		await typeText('2023-2025      │ Builder.io');
		await typeText('2025-Present   │ Webflow', 'terminal-line current');
		await addLine('');
		await addLine('─────────────────────────────────────────────────────────');

		// Animated counter for total years
		const totalYears = 20;
		const counterLine = document.createElement('div');
		counterLine.className = 'terminal-line total-years';
		counterLine.textContent = 'Marketing Experience: ';
		terminalOutput.appendChild(counterLine);

		const counterSpan = document.createElement('span');
		counterSpan.className = 'counter-number';
		counterLine.appendChild(counterSpan);

		// Animate counter from 0 to total years
		for (let i = 0; i <= totalYears; i++) {
			counterSpan.textContent = i + ' years';
			terminalOutput.parentElement.scrollTop = terminalOutput.parentElement.scrollHeight;
			await sleep(50);
		}

		await addLine('─────────────────────────────────────────────────────────');
		await addLine('');

		terminalInput.disabled = false;
		terminalInput.blur();
		isTyping = false;
		timelineComplete = true;
	}

	function clearTerminal() {
		terminalOutput.innerHTML = '';
		terminalInput.value = '';
		timelineComplete = false;
	}

	function resetTerminal() {
		terminalOutput.innerHTML = `
			<div class="terminal-line">$ Healthcare marketing to SaaS marketing</div>
			<div class="terminal-line"></div>
			<div class="terminal-line press-enter-line">
				<span class="terminal-prompt">$</span>
				<span class="press-enter-text">
					<span class="press-enter-desktop">Press Enter</span>
					<span class="press-enter-mobile">Click</span>
				</span>
			</div>
		`;
		terminalInput.value = '';
		isTyping = false;
		terminalInput.disabled = false;
		timelineComplete = false;
	}

	// Handle keyboard events on the terminal body
	const terminalBody = document.getElementById('terminalBody');

	document.addEventListener('keydown', (e) => {
		// Only handle if terminal is visible on screen
		const terminalRect = terminalBody?.getBoundingClientRect();
		if (!terminalRect) return;

		if (e.key === 'Enter' && !isTyping) {
			const command = terminalInput.value.trim().toLowerCase();

			if (command === 'clear') {
				clearTerminal();
				terminalInput.value = '';
			} else if (command === 'esc') {
				resetTerminal();
			} else {
				showTimeline();
				terminalInput.value = '';
			}
		} else if (e.key === 'Escape') {
			e.preventDefault();
			resetTerminal();
		}
	});

	terminalInput.addEventListener('keydown', (e) => {
		const command = terminalInput.value.trim().toLowerCase();

		if (e.key === 'Enter' && !isTyping) {
			if (command === 'clear') {
				clearTerminal();
				terminalInput.value = '';
			} else if (command === 'esc') {
				resetTerminal();
			} else {
				showTimeline();
				terminalInput.value = '';
			}
		} else if (e.key === 'Escape') {
			e.preventDefault();
			resetTerminal();
		}
	});

	// Click to trigger timeline (for mobile) or focus input (for desktop)
	terminalBody?.addEventListener('click', () => {
		if (!isTyping) {
			// On mobile/tablet, handle click behavior
			if (window.innerWidth <= 992) {
				if (timelineComplete) {
					// Second click: reset terminal so it's ready to run again
					resetTerminal();
				} else {
					// First click: show timeline
					showTimeline();
				}
			} else {
				// On desktop, focus the input
				terminalInput.focus();
			}
		}
	});

	// Easter egg music player
	const musicIcon = document.getElementById('musicIcon');
	const audio = new Audio('/assets/audio/carry_on.mp3');
	let isPlaying = false;

	musicIcon?.addEventListener('click', (e) => {
		e.stopPropagation(); // Prevent triggering terminal click

		if (isPlaying) {
			audio.pause();
			musicIcon.classList.remove('playing');
			isPlaying = false;
		} else {
			audio.play();
			musicIcon.classList.add('playing');
			isPlaying = true;
		}
	});

	// Reset icon when audio ends
	audio.addEventListener('ended', () => {
		musicIcon.classList.remove('playing');
		isPlaying = false;
	});
</script>
