						<img src="/assets/images/dark/Notion_dark.png" alt="Notion" class="logo-showcase-img logo-dark">
					</a>

					<!-- OpenAI -->
					<a href="https://chatgpt.com" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
						<img src="/assets/images/light/OpenAI_Logo_1.png" alt="OpenAI" class="logo-showcase-img logo-light">
						<img src="/assets/images/dark/OpenAI_Logo_1.png" alt="OpenAI" class="logo-showcase-img logo-dark">
					</a>

					<!-- PostHog -->
					<a href="https://posthog.com" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
						<img src="/assets/images/light/Posthog_light.png" alt="PostHog" class="logo-showcase-img logo-light">
						<img src="/assets/images/dark/posthog-logo-white.png" alt="PostHog" class="logo-showcase-img logo-dark">
					</a>

					<!-- Slack -->
					<a href="https://slack.com" target="_blank" rel="noopener noreferrer" class="logo-showcase-item">
						<img src="/assets/images/light/Slack_light.png" alt="Slack" class="logo-showcase-img logo-light">
						<img src="/assets/images/dark/Slack_dark.png" alt="Slack" class="logo-showcase-img logo-dark">
					</a>

