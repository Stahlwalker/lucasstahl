	</section>

	<!-- About Content Section -->
	<section class="about-section">
		<div class="section-container">

			<!-- Bio Section -->
			<div class="about-content">
				<div class="about-image-container">
					<img src="/assets/images/LukeHeadshot.jpeg" alt="Luke Stahl" class="about-image">
				</div>
				<div class="about-bio">
					<h2 class="about-bio-title">Hello, I'm Luke</h2>
					<div class="about-bio-text">
