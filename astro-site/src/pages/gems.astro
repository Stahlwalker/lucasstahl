<script>
	// Load more gems functionality
	const GEMS_PER_PAGE = 10;
	let currentlyVisible = GEMS_PER_PAGE;

	function initLoadMore() {
		const timelineEntries = document.querySelectorAll('.timeline-entry');
		const loadMoreBtn = document.getElementById('load-more-btn');

		// Hide entries beyond the initial 10
		timelineEntries.forEach((entry, index) => {
			if (index >= GEMS_PER_PAGE) {
				entry.style.display = 'none';
			}
		});

		// Hide button if all gems are visible
		const remainingCount = timelineEntries.length - currentlyVisible;
		if (remainingCount <= 0 && loadMoreBtn) {
			loadMoreBtn.style.display = 'none';
		}

		// Load more click handler
		loadMoreBtn?.addEventListener('click', () => {
			const hiddenEntries = Array.from(timelineEntries).filter((entry, index) =>
				index >= currentlyVisible && index < currentlyVisible + GEMS_PER_PAGE
			);

			hiddenEntries.forEach(entry => {
				entry.style.display = 'block';
				// Trigger animation
				setTimeout(() => {
					entry.style.opacity = '1';
				}, 10);
			});

			currentlyVisible += GEMS_PER_PAGE;
			const newRemainingCount = timelineEntries.length - currentlyVisible;

			// Hide button when all gems are loaded
			if (newRemainingCount <= 0 && loadMoreBtn) {
				loadMoreBtn.style.opacity = '0';
				loadMoreBtn.style.transform = 'translateY(20px)';
				setTimeout(() => {
					loadMoreBtn.style.display = 'none';
				}, 300);
			}
		});
	}

	// Initialize on page load
	document.addEventListener('DOMContentLoaded', initLoadMore);
</script>
