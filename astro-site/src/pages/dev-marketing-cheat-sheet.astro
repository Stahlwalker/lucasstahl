	}

	.role-list li:hover {
		color: var(--text-primary);
	}

	.role-list li::before {
		content: '•';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		color: var(--accent-primary);
		font-weight: bold;
		font-size: 0.9rem;
		line-height: 1;
