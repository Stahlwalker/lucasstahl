---

<MinimalLayout
	title="Developer Marketing Cheat Sheet | Luke Stahl"
	description="A comprehensive guide to developer marketing practices, KPIs, tools, and resources for marketing to developers."
	canonicalUrl="https://lucasstahl.com/dev-marketing-cheat-sheet"
>
	<div class="cheatsheet-container">
		<!-- Fixed Header with Title and Controls -->
		<header class="cheatsheet-header">
			<div class="header-content">
				<h1 class="cheatsheet-title">Developer Marketing Cheat Sheet</h1>
				<div class="header-controls">
					<button id="themeToggle" class="theme-toggle-btn" aria-label="Toggle theme">
						<i class="fa-solid fa-moon"></i>
					</button>
					<a href="/assets/Developer%20Marketing%20Cheatsheet.pdf" download class="download-btn">
						<i class="fa-solid fa-download"></i>
						<span>Download PDF</span>
					</a>
				</div>
			</div>
		</header>

		<!-- Cheat Sheet Content -->
		<main id="cheatsheet-content">
			<!-- Role & Responsibilities Section (Top) -->
			<section class="role-section">
				<h2 class="section-header">Role & Responsibilities</h2>
				<div class="role-grid">
					{roleCategories.map(category => (
						<div class={`role-card role-${category.color}`}>
							<h3 class="role-title">{category.title}</h3>
							<ul class="role-list">
								{category.items.map(item => (
									<li>{item}</li>
								))}
							</ul>
						</div>
					))}
				</div>
			</section>

			<!-- Tech Stack Section -->
			<section class="tech-stack-section">
				<h2 class="section-header">Tech Stack</h2>
				<div class="tech-stack-grid">
					{techStackCategories.map(category => (
						<div class={`role-card role-${category.color}`}>
							<h3 class="role-title">{category.title}</h3>
							<ul class="role-list">
								{category.items.map(item => (
									<li>{item}</li>
								))}
							</ul>
						</div>
					))}
				</div>
			</section>

			<!-- Additional Sections (Bottom Grid) -->
			<div class="cheatsheet-grid">
			{sections.map(section => (
				<div class={`cheatsheet-section section-${section.color}${section.isWide ? ' section-wide' : ''}`}>
					<h2 class="section-title">{section.title}</h2>

					{section.items && (
						<ul class="item-list">
							{section.items.map(item => (
								<li>{item}</li>
							))}
						</ul>
					)}

					{section.hasCategories && section.categories && (
						<div class="categories">
							{section.categories.map(category => (
								<div class="category">
									<h3 class="category-title">{category.name}</h3>
									<ul class="category-list">
										{category.items.map(item => (
											<li>{item}</li>
										))}
									</ul>
								</div>
							))}
						</div>
					)}

					{section.hasExperts && section.experts && (
						<ul class="expert-list">
							{section.experts.map(expert => (
								<li>
									<span class="expert-name">{expert.name}</span>
									<a href={expert.url} target="_blank" rel="noopener noreferrer" class="expert-handle">{expert.handle}</a>
								</li>
							))}
						</ul>
					)}

					{section.hasResources && section.resources && (
						<ul class="resource-list">
							{section.resources.map(resource => (
								<li>
									<span class="resource-name">{resource.name}</span>
									<a href={`https://${resource.url}`} target="_blank" rel="noopener noreferrer" class="resource-url">{resource.url}</a>
								</li>
							))}
						</ul>
					)}
				</div>
			))}
			</div>
		</main>

		<!-- Footer Note -->
		<footer class="cheatsheet-footer">
			<p>Created by <a href="https://lucasstahl.com" target="_blank">Luke Stahl</a> • Last updated December 2025</p>
		</footer>
	</div>
</MinimalLayout>

<script>
	// PostHog tracking for PDF download
	document.addEventListener('DOMContentLoaded', function() {
		const downloadBtn = document.querySelector('.download-btn');

		if (downloadBtn) {
			downloadBtn.addEventListener('click', function() {
				if (window.posthog) {
					window.posthog.capture('cheat_sheet_pdf_downloaded', {
						page: 'dev_marketing_cheat_sheet',
						button_location: 'header',
						button_text: 'Download PDF'
					});
				}
			});
		}
	});
</script>

<style>
	/* Container */
