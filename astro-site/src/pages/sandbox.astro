			ctx.textBaseline = 'middle';
			ctx.lineWidth = 4;
			ctx.strokeStyle = lsGradient;
			ctx.shadowBlur = 25;
			ctx.shadowColor = 'rgba(6, 182, 212, 0.6)';
			ctx.strokeText('LS', lsX, lsY);
			ctx.shadowBlur = 0;

			// Keyboard (same width as screen, connected)
			const keyboardGradient = ctx.createLinearGradient(
