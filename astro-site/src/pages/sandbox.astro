			canvas.style.height = `${size}px`;
			ctx.scale(dpr, dpr);

			const centerX = size / 2;
			const centerY = size / 2;
			const cubeSize = 80;

			// Draw isometric cube wireframe
			ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
			ctx.lineWidth = 1.5;

			// Helper function for isometric projection
			function iso(x, y, z) {
				const isoX = (x - y) * 0.866;
				const isoY = (x + y) * 0.5 - z;
				return { x: centerX + isoX, y: centerY + isoY };
			}

			// Draw cube edges
			const corners = [
				[-cubeSize, -cubeSize, -cubeSize],
				[cubeSize, -cubeSize, -cubeSize],
				[cubeSize, cubeSize, -cubeSize],
				[-cubeSize, cubeSize, -cubeSize],
				[-cubeSize, -cubeSize, cubeSize],
				[cubeSize, -cubeSize, cubeSize],
				[cubeSize, cubeSize, cubeSize],
				[-cubeSize, cubeSize, cubeSize]
			];

			const edges = [
				[0, 1], [1, 2], [2, 3], [3, 0], // Bottom
				[4, 5], [5, 6], [6, 7], [7, 4], // Top
				[0, 4], [1, 5], [2, 6], [3, 7]  // Sides
			];

			edges.forEach(([start, end]) => {
				const p1 = iso(...corners[start]);
				const p2 = iso(...corners[end]);
				ctx.beginPath();
				ctx.moveTo(p1.x, p1.y);
				ctx.lineTo(p2.x, p2.y);
				ctx.stroke();
			});

			// Draw green dots around the cube
			const dots = [
				{ x: -cubeSize - 40, y: 0, z: 0, color: '#10b981' },
				{ x: cubeSize + 40, y: 0, z: 0, color: '#10b981' },
				{ x: 0, y: -cubeSize - 40, z: 0, color: '#10b981' },
				{ x: 0, y: cubeSize + 40, z: 0, color: '#10b981' },
				{ x: 0, y: 0, z: -cubeSize - 40, color: '#10b981' },
				{ x: 0, y: 0, z: cubeSize + 40, color: '#10b981' },
				{ x: -cubeSize - 20, y: -cubeSize - 20, z: 20, color: '#34d399' },
				{ x: cubeSize + 20, y: -cubeSize - 20, z: -20, color: '#34d399' },
				{ x: -cubeSize - 20, y: cubeSize + 20, z: -20, color: '#34d399' },
				{ x: cubeSize + 20, y: cubeSize + 20, z: 20, color: '#34d399' },
			];

			// Draw connecting lines with dots
			ctx.setLineDash([2, 4]);
			ctx.strokeStyle = 'rgba(255, 255, 255, 0.15)';
			dots.forEach(dot => {
				const dotPos = iso(dot.x, dot.y, dot.z);
				const nearestCorner = corners.reduce((nearest, corner) => {
					const cornerPos = iso(...corner);
					const dist = Math.hypot(cornerPos.x - dotPos.x, cornerPos.y - dotPos.y);
					return dist < nearest.dist ? { pos: cornerPos, dist } : nearest;
				}, { dist: Infinity });

				ctx.beginPath();
				ctx.moveTo(dotPos.x, dotPos.y);
				ctx.lineTo(nearestCorner.pos.x, nearestCorner.pos.y);
				ctx.stroke();
			});
			ctx.setLineDash([]);

			// Draw dots
			dots.forEach(dot => {
				const pos = iso(dot.x, dot.y, dot.z);
				ctx.fillStyle = dot.color;
				ctx.shadowBlur = 10;
				ctx.shadowColor = dot.color;
				ctx.beginPath();
				ctx.arc(pos.x, pos.y, 4, 0, Math.PI * 2);
				ctx.fill();
			});

			ctx.shadowBlur = 0;
		}

		// Initialize diamond on load
		document.addEventListener('DOMContentLoaded', () => {
			drawIsometricDiamond();
			drawVectorCube();

			// Redraw on resize
			let resizeTimeout;
			window.addEventListener('resize', () => {
				clearTimeout(resizeTimeout);
				resizeTimeout = setTimeout(() => {
					drawIsometricDiamond();
					drawVectorCube();
				}, 250);
			});
		});

		// Generate particles
		function createParticles() {
			const particlesContainer = document.getElementById('particles');
			if (!particlesContainer) return;

			const particleCount = 100;

			for (let i = 0; i < particleCount; i++) {
				const particle = document.createElement('div');
				particle.className = 'particle';

				// Random position
				const x = Math.random() * 100;
				const y = Math.random() * 100;

				// Random size (1-3px)
				const size = Math.random() * 2 + 1;

				// Random opacity
				const opacity = Math.random() * 0.6 + 0.2;

				particle.style.left = `${x}%`;
				particle.style.top = `${y}%`;
				particle.style.width = `${size}px`;
				particle.style.height = `${size}px`;
				particle.style.opacity = opacity;

				// Add subtle animation
				const duration = Math.random() * 3 + 2;
				particle.style.animation = `twinkle ${duration}s infinite`;

				particlesContainer.appendChild(particle);
			}
		}

		// Create particles on page load
		document.addEventListener('DOMContentLoaded', createParticles);

		console.log('Sandbox loaded - ready to experiment!');
	</script>

	<style>
		@keyframes twinkle {
			0%, 100% { opacity: 0.2; }
			50% { opacity: 0.8; }
		}
	</style>
