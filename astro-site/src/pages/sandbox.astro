					ctx.beginPath();
					ctx.moveTo(keyTopX, y);
					ctx.lineTo(keyTopX + keyWidthTop, y);
					ctx.lineTo(keyBottomX + keyWidthBottom, y + keyHeight);
					ctx.lineTo(keyBottomX, y + keyHeight);
					ctx.closePath();
					ctx.fill();
					ctx.stroke();
				}
			}
