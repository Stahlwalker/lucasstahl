---
import Layout from '../layouts/Layout.astro';
---

<Layout
	title="Sandbox - Luke Stahl"
	description="Experimental playground for testing designs and animations"
>
	<!-- Noindex meta tag to keep this out of search engines -->
	<meta name="robots" content="noindex, nofollow" slot="head" />

	<!-- Section 0: Isometric Diamond Hero -->
	<section class="diamond-hero">
		<canvas id="diamondCanvas"></canvas>
		<div class="hero-content-overlay">
			<h1>Electric Gradients</h1>
			<p>Isometric shapes with vibrant colors</p>
		</div>
	</section>

	<!-- Section 1: Radial Gradient Glow -->
	<section class="gradient-section section-1">
		<div class="gradient-glow glow-1"></div>
		<div class="gradient-glow glow-2"></div>
		<div class="noise-overlay"></div>
		<div class="section-content">
			<h1>Gradient Glow Effect</h1>
			<p>Vibrant radial gradients with blur and noise texture</p>
		</div>
	</section>

	<!-- Section 3: Vertical Stripes -->
	<section class="gradient-section section-3">
		<div class="stripe-gradient"></div>
		<div class="noise-overlay"></div>
		<div class="section-content">
			<h2>Automation for the context era</h2>
		</div>
	</section>

	<!-- Section 3.5: Floating Code Window with Gradient Spotlights -->
	<section class="code-spotlight-section">
		<!-- Gradient spotlights -->
		<div class="spotlight spotlight-1"></div>
		<div class="spotlight spotlight-2"></div>
		<div class="spotlight spotlight-3"></div>
		<div class="spotlight spotlight-4"></div>
		<div class="noise-overlay"></div>

		<!-- Code window -->
		<div class="code-window">
			<div class="window-header">
				<div class="window-dots">
					<span></span>
					<span></span>
					<span></span>
				</div>
				<div class="window-title">workflow_example.go</div>
			</div>
			<div class="code-content">
				<pre><code><span class="code-keyword">from</span> prefect <span class="code-keyword">import</span> flow, task
<span class="code-keyword">import</span> random

<span class="code-decorator">@task</span>
<span class="code-keyword">def</span> <span class="code-function">get_customer_info</span>() -> <span class="code-type">int</span>:
    <span class="code-comment"># Fetch customer IDs from a database or API</span>
    <span class="code-keyword">return</span> [<span class="code-string">f"customer_&#123;n&#125;"</span> <span class="code-keyword">for</span> n <span class="code-keyword">in</span> random.choices(range(<span class="code-number">100</span>), k=<span class="code-number">10</span>)]

<span class="code-decorator">@task</span>
<span class="code-keyword">def</span> <span class="code-function">process_customer</span>(customer_id: <span class="code-type">str</span>) -> <span class="code-type">str</span>:
    <span class="code-comment"># Process a single customer</span>
    <span class="code-keyword">return</span> <span class="code-string">f"Processed &#123;customer_id&#125;"</span>

<span class="code-decorator">@flow</span>
<span class="code-keyword">def</span> <span class="code-function">main</span>() -> list[<span class="code-type">str</span>]:
    customer_ids = get_customer_info()
    results = process_customer.map(customer_ids)
    <span class="code-keyword">return</span> results

<span class="code-keyword">if</span> __name__ == <span class="code-string">"__main__"</span>:
    main()</code></pre>
			</div>
		</div>
	</section>

	<!-- Section 4: Isometric Wireframe Layout -->
	<section class="wireframe-section">
		<div class="wireframe-container">
			<!-- Left side: Isometric device -->
			<div class="device-visual">
				<div class="device-frame main-device">
					<div class="device-glow"></div>
					<div class="device-screen">
						<div class="code-line">$ npm install</div>
						<div class="code-line">$ npm run build</div>
						<div class="code-line highlight">✓ Build complete</div>
						<div class="code-line">Ready to deploy</div>
					</div>
				</div>
				<div class="device-frame side-device-1"></div>
				<div class="device-frame side-device-2"></div>
			</div>

			<!-- Right side: Content -->
			<div class="wireframe-content">
				<h2 class="wireframe-title">Portable by default</h2>
				<p class="wireframe-description">
					Work across devices with your work anywhere. It works.
					Portable from browser to CLI, desktop to servers—your
					setup follows OOTB natively.
				</p>
				<button class="wireframe-cta">Learn about work portability</button>
			</div>
		</div>
	</section>

	<!-- Section 5: Supabase-style Features Grid -->
	<section class="features-grid-section">
		<div class="features-grid">
			<!-- Card 1: Storage -->
			<div class="feature-card">
				<div class="card-header">
					<svg class="card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
					</svg>
					<h3>Storage</h3>
				</div>
				<p class="card-description">Store, organize, and serve<br/>large files, from videos to images.</p>
				<div class="card-visual storage-visual">
					<div class="file-grid">
						<div class="file-icon image"></div>
						<div class="file-icon image"></div>
						<div class="file-icon image"></div>
						<div class="file-icon image"></div>
						<div class="file-icon image"></div>
						<div class="file-icon image"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon doc"></div>
						<div class="file-icon video"></div>
						<div class="file-icon video"></div>
						<div class="file-icon video"></div>
						<div class="file-icon video"></div>
						<div class="file-icon video"></div>
						<div class="file-icon video"></div>
					</div>
				</div>
			</div>

			<!-- Card 2: Realtime -->
			<div class="feature-card">
				<div class="card-header">
					<svg class="card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/>
					</svg>
					<h3>Realtime</h3>
				</div>
				<p class="card-description">Build multiplayer experiences<br/>with real-time data synchronization.</p>
				<div class="card-visual realtime-visual">
					<div class="grid-background"></div>
					<div class="cursor cursor-1">
						<svg width="20" height="20" viewBox="0 0 20 20" fill="white">
							<path d="M2 2l7 16 3-8 8-3L2 2z"/>
						</svg>
					</div>
					<div class="chat-bubble">
						<span>•••</span>
					</div>
					<div class="cursor cursor-2">
						<svg width="20" height="20" viewBox="0 0 20 20" fill="white">
							<path d="M2 2l7 16 3-8 8-3L2 2z"/>
						</svg>
					</div>
				</div>
			</div>

			<!-- Card 3: Vector -->
			<div class="feature-card">
				<div class="card-header">
					<svg class="card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z"/>
					</svg>
					<h3>Vector</h3>
				</div>
				<p class="card-description">Integrate your favorite ML-models to <strong>store, index and search vector embeddings</strong>.</p>
				<div class="card-visual vector-visual">
					<canvas id="vectorCube"></canvas>
					<div class="brand-logos">
						<div class="brand-logo">OpenAI</div>
						<div class="brand-logo">Hugging Face</div>
					</div>
				</div>
			</div>

			<!-- Card 4: Data APIs -->
			<div class="feature-card">
				<div class="card-header">
					<svg class="card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<rect x="3" y="3" width="18" height="18" rx="2"/>
						<path d="M9 3v18M15 3v18M3 9h18M3 15h18"/>
					</svg>
					<h3>Data APIs</h3>
				</div>
				<p class="card-description">Instant ready-to-use <strong>Restful APIs</strong>.</p>
				<div class="card-visual api-visual">
					<div class="api-list">
						<div class="api-row">
							<span class="api-label">countries</span>
							<span class="api-endpoint">.../v1/countries</span>
						</div>
						<div class="api-row">
							<span class="api-label">continents</span>
							<span class="api-endpoint">.../v1/continents</span>
						</div>
						<div class="api-row">
							<span class="api-label">cities</span>
							<span class="api-endpoint">.../v1/cities</span>
						</div>
						<div class="api-row">
							<span class="api-label">states</span>
							<span class="api-endpoint">.../v1/states</span>
						</div>
						<div class="api-row">
							<span class="api-label">country_codes</span>
							<span class="api-endpoint">.../v1/country_codes</span>
						</div>
						<div class="api-row">
							<span class="api-label">oceans</span>
							<span class="api-endpoint">.../v1/oceans</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Section 6: Staggered Gradient Footer with Particles -->
	<section class="gradient-footer">
		<div class="footer-content">
			<h2 class="footer-headline">Orchestrate anything. Observe everything.</h2>
			<p class="footer-subtext">Join 50,000+ developers building workflows with Prefect</p>
			<div class="footer-cta-group">
				<button class="footer-btn primary">Start for free</button>
				<button class="footer-btn secondary">View documentation →</button>
			</div>

			<!-- Footer Links -->
			<div class="footer-links">
				<div class="link-column">
					<h4>Product</h4>
					<a href="#">Prefect Cloud</a>
					<a href="#">Prefect Open Source</a>
					<a href="#">Prefect Cloud for AWS</a>
					<a href="#">Pricing</a>
				</div>
				<div class="link-column">
					<h4>Resources</h4>
					<a href="#">Docs</a>
					<a href="#">Case Studies</a>
					<a href="#">Blog</a>
					<a href="#">Community</a>
				</div>
				<div class="link-column">
					<h4>Company</h4>
					<a href="#">About</a>
					<a href="#">Contact</a>
					<a href="#">Careers</a>
					<a href="#">Legal</a>
				</div>
				<div class="link-column">
					<h4>Social</h4>
					<a href="#">Twitter</a>
					<a href="#">GitHub</a>
					<a href="#">LinkedIn</a>
				</div>
			</div>
		</div>

		<!-- Staggered Gradient Layers -->
		<div class="gradient-layers">
			<div class="gradient-bar bar-1"></div>
			<div class="gradient-bar bar-2"></div>
			<div class="gradient-bar bar-3"></div>
		</div>

		<!-- Particles -->
		<div class="particles" id="particles"></div>
	</section>

	<style>
		/* Isometric Diamond Hero */
		.diamond-hero {
			position: relative;
			min-height: 100vh;
			background: linear-gradient(180deg, #0a1628 0%, #0d1b2a 100%);
			display: flex;
			align-items: center;
			justify-content: center;
			overflow: hidden;
		}

		#diamondCanvas {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			filter: blur(1px);
		}

		.hero-content-overlay {
			position: relative;
			z-index: 10;
			text-align: center;
			color: #fff;
			margin-top: 50vh;
		}

		.hero-content-overlay h1 {
			font-family: 'Inter', sans-serif;
			font-size: clamp(2.5rem, 6vw, 5rem);
			font-weight: 500;
			margin: 0 0 1rem 0;
			letter-spacing: -0.02em;
		}

		.hero-content-overlay p {
			font-size: 1.2rem;
			color: rgba(255, 255, 255, 0.7);
		}

		/* Reset section styling */
		.gradient-section {
			position: relative;
			min-height: 100vh;
			display: flex;
			align-items: center;
			justify-content: center;
			overflow: hidden;
			background: #000;
		}

		/* Section content */
		.section-content {
			position: relative;
			z-index: 10;
			text-align: center;
			padding: 2rem;
			max-width: 1200px;
		}

		.section-content h1,
		.section-content h2 {
			font-family: 'Inter', sans-serif;
			font-size: clamp(2rem, 5vw, 4rem);
			font-weight: 500;
			color: #fff;
			margin: 0;
			letter-spacing: -0.02em;
		}

		.section-content p {
			color: rgba(255, 255, 255, 0.7);
			font-size: 1.2rem;
			margin-top: 1rem;
		}

		/* Gradient glows */
		.gradient-glow {
			position: absolute;
			border-radius: 50%;
			filter: blur(120px);
			opacity: 0.6;
			pointer-events: none;
		}

		/* Section 1: Radial glows */
		.section-1 .glow-1 {
			width: 800px;
			height: 800px;
			background: radial-gradient(circle, #ff0080 0%, #ff4500 30%, transparent 70%);
			top: 50%;
			left: 30%;
			transform: translate(-50%, -50%);
		}

		.section-1 .glow-2 {
			width: 700px;
			height: 700px;
			background: radial-gradient(circle, #00d4ff 0%, #0080ff 30%, transparent 70%);
			top: 50%;
			right: 20%;
			transform: translateY(-50%);
		}

		/* Section 3: Vertical stripes */
		.stripe-gradient {
			position: absolute;
			width: 100%;
			height: 100%;
			background: repeating-linear-gradient(
				90deg,
				#ff0080 0%,
				#ff4500 10%,
				#ffaa00 20%,
				#00ff88 30%,
				#00d4ff 40%,
				#0080ff 50%,
				#ff0080 60%
			);
			filter: blur(80px);
			opacity: 0.7;
		}

		/* Noise overlay */
		.noise-overlay {
			position: absolute;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='3.5' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
			opacity: 0.15;
			pointer-events: none;
			z-index: 1;
		}

		/* Responsive */
		@media (max-width: 768px) {
			.gradient-glow {
				filter: blur(80px);
			}
		}

		/* Code Spotlight Section */
		.code-spotlight-section {
			position: relative;
			min-height: 100vh;
			background: #000;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 4rem 2rem;
			overflow: hidden;
		}

		.spotlight {
			position: absolute;
			border-radius: 50%;
			filter: blur(140px);
			opacity: 0.7;
			pointer-events: none;
		}

		.spotlight-1 {
			width: 600px;
			height: 600px;
			background: radial-gradient(circle, #ec4899 0%, transparent 70%);
			top: 10%;
			left: 10%;
		}

		.spotlight-2 {
			width: 700px;
			height: 700px;
			background: radial-gradient(circle, #f97316 0%, #fbbf24 30%, transparent 70%);
			bottom: 10%;
			left: 20%;
		}

		.spotlight-3 {
			width: 650px;
			height: 650px;
			background: radial-gradient(circle, #06b6d4 0%, #3b82f6 30%, transparent 70%);
			top: 15%;
			right: 15%;
		}

		.spotlight-4 {
			width: 550px;
			height: 550px;
			background: radial-gradient(circle, #a855f7 0%, transparent 70%);
			bottom: 20%;
			right: 10%;
		}

		/* Code Window */
		.code-window {
			position: relative;
			z-index: 10;
			max-width: 700px;
			width: 100%;
			background: rgba(20, 20, 30, 0.85);
			border-radius: 12px;
			overflow: hidden;
			box-shadow:
				0 20px 60px rgba(0, 0, 0, 0.5),
				0 0 0 1px rgba(255, 255, 255, 0.1);
			backdrop-filter: blur(10px);
		}

		.window-header {
			display: flex;
			align-items: center;
			padding: 1rem 1.5rem;
			background: rgba(30, 30, 40, 0.6);
			border-bottom: 1px solid rgba(255, 255, 255, 0.05);
		}

		.window-dots {
			display: flex;
			gap: 0.5rem;
		}

		.window-dots span {
			width: 12px;
			height: 12px;
			border-radius: 50%;
			background: rgba(255, 255, 255, 0.15);
		}

		.window-dots span:nth-child(1) { background: #ff5f56; }
		.window-dots span:nth-child(2) { background: #ffbd2e; }
		.window-dots span:nth-child(3) { background: #27c93f; }

		.window-title {
			margin-left: auto;
			font-family: 'Fira Code', monospace;
			font-size: 0.85rem;
			color: rgba(255, 255, 255, 0.5);
		}

		.code-content {
			padding: 1.5rem;
			overflow-x: auto;
		}

		.code-content pre {
			margin: 0;
			font-family: 'Fira Code', monospace;
			font-size: 0.9rem;
			line-height: 1.6;
			color: rgba(255, 255, 255, 0.8);
		}

		.code-content code {
			display: block;
		}

		/* Code Syntax Highlighting */
		.code-keyword { color: #ff79c6; }
		.code-function { color: #50fa7b; }
		.code-type { color: #8be9fd; }
		.code-string { color: #f1fa8c; }
		.code-number { color: #bd93f9; }
		.code-comment { color: #6272a4; font-style: italic; }
		.code-decorator { color: #ff79c6; }

		/* Responsive */
		@media (max-width: 768px) {
			.code-window {
				max-width: 100%;
			}

			.code-content {
				padding: 1rem;
			}

			.code-content pre {
				font-size: 0.75rem;
			}

			.spotlight {
				filter: blur(100px);
			}
		}

		/* Wireframe Section */
		.wireframe-section {
			min-height: 100vh;
			background: #000;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 4rem 2rem;
			position: relative;
			overflow: hidden;
		}

		.wireframe-container {
			max-width: 1400px;
			width: 100%;
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
			align-items: center;
		}

		/* Device Visual */
		.device-visual {
			position: relative;
			height: 500px;
			transform-style: preserve-3d;
			perspective: 1000px;
		}

		.device-frame {
			position: absolute;
			border: 2px solid rgba(255, 255, 255, 0.15);
			border-radius: 12px;
			background: rgba(0, 0, 0, 0.4);
			backdrop-filter: blur(10px);
		}

		.main-device {
			width: 400px;
			height: 280px;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%) rotateX(20deg) rotateY(-10deg) rotateZ(-2deg);
			z-index: 2;
			border-color: rgba(0, 180, 255, 0.6);
			box-shadow:
				0 0 30px rgba(0, 180, 255, 0.3),
				inset 0 0 30px rgba(0, 180, 255, 0.1);
		}

		.device-glow {
			position: absolute;
			inset: -2px;
			border-radius: 12px;
			background: linear-gradient(135deg, rgba(0, 180, 255, 0.4), rgba(0, 100, 255, 0.2));
			filter: blur(8px);
			opacity: 0.6;
			z-index: -1;
		}

		.device-screen {
			padding: 2rem;
			font-family: 'Fira Code', monospace;
			font-size: 0.9rem;
			color: rgba(255, 255, 255, 0.7);
		}

		.code-line {
			padding: 0.5rem 0;
			opacity: 0.6;
		}

		.code-line.highlight {
			color: #00ff88;
			opacity: 1;
		}

		.side-device-1 {
			width: 200px;
			height: 320px;
			bottom: 10%;
			left: 0;
			transform: rotateX(25deg) rotateY(-15deg) rotateZ(-5deg);
			z-index: 1;
		}

		.side-device-2 {
			width: 350px;
			height: 220px;
			top: 5%;
			right: 0;
			transform: rotateX(15deg) rotateY(5deg) rotateZ(2deg);
			z-index: 1;
		}

		/* Wireframe Content */
		.wireframe-content {
			color: #fff;
		}

		.wireframe-title {
			font-family: 'Inter', sans-serif;
			font-size: clamp(2.5rem, 5vw, 4.5rem);
			font-weight: 400;
			line-height: 1.1;
			margin: 0 0 1.5rem 0;
			letter-spacing: -0.02em;
		}

		.wireframe-description {
			font-size: 1.1rem;
			line-height: 1.6;
			color: rgba(255, 255, 255, 0.6);
			margin-bottom: 2rem;
			max-width: 500px;
		}

		.wireframe-cta {
			background: transparent;
			border: 1px solid rgba(255, 255, 255, 0.3);
			color: #fff;
			padding: 0.75rem 1.5rem;
			font-size: 0.9rem;
			font-weight: 500;
			text-transform: uppercase;
			letter-spacing: 0.05em;
			cursor: pointer;
			transition: all 0.3s ease;
		}

		.wireframe-cta:hover {
			background: rgba(255, 255, 255, 0.1);
			border-color: rgba(255, 255, 255, 0.5);
