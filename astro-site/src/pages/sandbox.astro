---
import Layout from '../layouts/Layout.astro';
import ReactTest from '../components/ReactTest.jsx';
import ShadcnTest from '../components/ShadcnTest.jsx';
import DatePickerTest from '../components/DatePickerTest.jsx';
import ColorBendsTest from '../components/ColorBendsTest.jsx';
---

<Layout
	title="Sandbox - Luke Stahl"
	description="Experimental playground for testing designs and animations"
>
	<!-- Noindex meta tag to keep this out of search engines -->
	<meta name="robots" content="noindex, nofollow" slot="head" />

	<!-- Hero Homepage Design Section (1500x500) -->
	<section class="hero-homepage-wrapper">
		<div class="hero-homepage-section">
			<div class="hero-grid-background"></div>

			<!-- Decorative Icons -->
			<div class="hero-icon hero-icon-1">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="12" cy="12" r="10"/>
					<path d="M12 6v6l4 2"/>
				</svg>
			</div>
			<div class="hero-icon hero-icon-2">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<polygon points="12 2 2 7 12 12 22 7 12 2"/>
					<polyline points="2 17 12 22 22 17"/>
					<polyline points="2 12 12 17 22 12"/>
				</svg>
			</div>
			<div class="hero-icon hero-icon-3">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
					<polyline points="14 2 14 8 20 8"/>
				</svg>
			</div>
			<div class="hero-icon hero-icon-4">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
				</svg>
			</div>
			<div class="hero-icon hero-icon-5">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<circle cx="12" cy="12" r="3"/>
					<path d="M12 1v6m0 6v6m5.196-15.804l-4.242 4.242m0 6.364l-4.242 4.242M23 12h-6m-6 0H1m20.196-5.196l-4.242 4.242m0 6.364l-4.242 4.242"/>
				</svg>
			</div>
			<div class="hero-icon hero-icon-6">
				<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<rect x="2" y="3" width="20" height="14" rx="2"/>
					<path d="M8 21h8m-4-4v4"/>
				</svg>
			</div>

			<div class="hero-code-container">
				<div class="hero-code-box">
					<div class="hero-code-content">
						<div class="hero-code-comment">
							<span class="hero-comment-slashes">//</span> <span class="hero-comment-text">lukestahl.io</span>
						</div>
						<div class="hero-code-line">
							<span class="hero-code-keyword">const</span> <span class="hero-code-variable">developerMarketing</span> = &#123;
						</div>
						<div class="hero-code-line hero-code-indent">
							<span class="hero-code-property">name</span>: <span class="hero-code-string">"Luke Stahl"</span>,
						</div>
						<div class="hero-code-line hero-code-indent">
							<span class="hero-code-property">focus</span>: <span class="hero-code-string">"Marketing & Web Development"</span>,
						</div>
						<div class="hero-code-line hero-code-indent">
							<span class="hero-code-property">passion</span>: <span class="hero-code-string">"Building better developer experiences"</span>
						</div>
						<div class="hero-code-line">&#125;;</div>
						<div class="hero-code-line">
							<span class="hero-cursor"></span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Hero Homepage Design Section (1500x500) - Canvas Image -->
	<section class="hero-homepage-wrapper">
		<button id="downloadHeroBtn" class="download-hero-btn">
			Download as PNG (1500x500)
		</button>
		<canvas id="heroCanvas" width="1500" height="500" style="border-radius: 12px; display: block;"></canvas>
	</section>

	<!-- Hero Twitter/X Banner Version (1500x500) - Larger Code Box -->
	<section class="hero-homepage-wrapper">
		<button id="downloadTwitterBtn" class="download-hero-btn">
			Download Twitter/X Banner (1500x500)
		</button>
		<canvas id="heroCanvasTwitter" width="1500" height="500" style="border-radius: 12px; display: block;"></canvas>
	</section>

	<!-- LinkedIn Banner Version (1584x396) -->
	<section class="hero-homepage-wrapper">
		<button id="downloadLinkedInBtn" class="download-hero-btn">
			Download LinkedIn Banner (1584x396)
		</button>
		<canvas id="heroCanvasLinkedIn" width="1584" height="396" style="border-radius: 12px; display: block;"></canvas>
	</section>

	<!-- Logo Design Section -->
	<section class="logo-design-wrapper">
		<h2 class="logo-section-title">Logo Designs</h2>

		<!-- Logo Canvas with Glasses -->
		<div class="logo-container">
			<canvas id="logoCanvas" width="800" height="800"></canvas>
			<button id="downloadLogoBtn" class="download-logo-btn">
				Download Logo with Glasses (800x800)
			</button>
		</div>

		<!-- Logo Canvas without Glasses -->
		<div class="logo-container">
			<canvas id="logoCanvas2" width="800" height="800"></canvas>
			<button id="downloadLogoBtn2" class="download-logo-btn">
				Download PNG (800x800)
			</button>
			<button id="downloadLogoSvgBtn" class="download-logo-btn">
				Download SVG
			</button>
		</div>

		<!-- Logo SVG Version -->
		<div class="logo-container">
			<svg id="logoSvg" width="800" height="800" viewBox="0 0 800 800" xmlns="http://www.w3.org/2000/svg">
				<!-- Background -->
				<rect width="800" height="800" fill="#0a1128"/>

				<!-- Laptop Screen with rounded corners -->
				<defs>
					<filter id="svgScreenGlow">
						<feGaussianBlur in="SourceGraphic" stdDeviation="40"/>
					</filter>
					<filter id="svgLsGlow">
						<feGaussianBlur in="SourceGraphic" stdDeviation="25"/>
					</filter>
					<linearGradient id="svgLsGradient" x1="250" y1="360" x2="710" y2="360" gradientUnits="userSpaceOnUse">
						<stop offset="0%" stop-color="#06b6d4"/>
						<stop offset="100%" stop-color="#a855f7"/>
					</linearGradient>
					<linearGradient id="svgKeyboardGradient" x1="400" y1="525" x2="400" y2="665" gradientUnits="userSpaceOnUse">
						<stop offset="0%" stop-color="#06b6d4" stop-opacity="0.3"/>
						<stop offset="50%" stop-color="#34d399" stop-opacity="0.3"/>
						<stop offset="100%" stop-color="#a855f7" stop-opacity="0.3"/>
					</linearGradient>
				</defs>

				<!-- Screen glow -->
				<rect x="70" y="100" width="660" height="420" rx="12" fill="rgba(6, 182, 212, 0.3)" filter="url(#svgScreenGlow)"/>

				<!-- Screen background -->
				<rect x="70" y="100" width="660" height="420" rx="12" fill="rgba(10, 25, 47, 0.95)"/>

				<!-- Screen border -->
				<rect x="70" y="100" width="660" height="420" rx="12" fill="none" stroke="#06b6d4" stroke-width="3"/>

				<!-- Title bar -->
				<rect x="70" y="100" width="660" height="30" fill="rgba(20, 35, 55, 0.9)"/>

				<!-- macOS window buttons -->
				<circle cx="85" cy="115" r="6" fill="#ff5f56"/>
				<circle cx="105" cy="115" r="6" fill="#ffbd2e"/>
				<circle cx="125" cy="115" r="6" fill="#27c93f"/>

				<!-- Title text -->
				<text x="400" y="117" font-family="'Fira Code', monospace" font-size="10" fill="rgba(255, 255, 255, 0.7)" text-anchor="middle">lukestahl</text>

				<!-- Line numbers sidebar -->
				<rect x="70" y="130" width="40" height="390" fill="rgba(15, 25, 40, 0.8)"/>

				<!-- Line numbers -->
				<text x="102" y="153" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">1</text>
				<text x="102" y="167" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">2</text>
				<text x="102" y="181" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">3</text>
				<text x="102" y="195" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">4</text>
				<text x="102" y="209" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">5</text>
				<text x="102" y="223" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">6</text>
				<text x="102" y="237" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">7</text>
				<text x="102" y="251" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">8</text>
				<text x="102" y="265" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">9</text>
				<text x="102" y="279" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">10</text>
				<text x="102" y="293" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">11</text>
				<text x="102" y="307" font-family="'Fira Code', monospace" font-size="8" fill="rgba(96, 165, 250, 0.4)" text-anchor="end">12</text>

				<!-- CSS Code (left side) -->
				<g opacity="0.7">
					<text x="118" y="153" font-family="'Fira Code', monospace" font-size="8" fill="#697098">/* Styling LS */</text>
					<text x="118" y="167" font-family="'Fira Code', monospace" font-size="8" fill="#c792ea">.logo &#123;</text>
					<text x="118" y="181" font-family="'Fira Code', monospace" font-size="8" fill="#82aaff">  background:</text>
					<text x="118" y="195" font-family="'Fira Code', monospace" font-size="8" fill="#c792ea">    linear-gradient(</text>
					<text x="118" y="209" font-family="'Fira Code', monospace" font-size="8" fill="#c3e88d">      cyan,</text>
					<text x="118" y="223" font-family="'Fira Code', monospace" font-size="8" fill="#c3e88d">      purple</text>
					<text x="118" y="237" font-family="'Fira Code', monospace" font-size="8" fill="#c792ea">    );</text>
					<text x="118" y="251" font-family="'Fira Code', monospace" font-size="8" fill="#82aaff">  -webkit-</text>
					<text x="118" y="265" font-family="'Fira Code', monospace" font-size="8" fill="#82aaff">    background-clip:</text>
					<text x="118" y="279" font-family="'Fira Code', monospace" font-size="8" fill="#c3e88d">      text;</text>
					<text x="118" y="293" font-family="'Fira Code', monospace" font-size="8" fill="#c792ea">&#125;</text>
				</g>

				<!-- LS Logo (focal point - lowered) -->
				<text x="480" y="360" font-family="'Fira Code', monospace" font-size="240" font-weight="bold" fill="none" stroke="url(#svgLsGradient)" stroke-width="4" text-anchor="middle" dominant-baseline="middle" filter="url(#svgLsGlow)">LS</text>
				<text x="480" y="360" font-family="'Fira Code', monospace" font-size="240" font-weight="bold" fill="none" stroke="url(#svgLsGradient)" stroke-width="4" text-anchor="middle" dominant-baseline="middle">LS</text>

				<!-- Keyboard base (trapezoid) -->
				<path d="M 70 525 L 730 525 L 745 665 L 55 665 Z" fill="url(#svgKeyboardGradient)" stroke="#06b6d4" stroke-width="2" filter="url(#svgScreenGlow)"/>
				<path d="M 70 525 L 730 525 L 745 665 L 55 665 Z" fill="url(#svgKeyboardGradient)" stroke="#06b6d4" stroke-width="2"/>

				<!-- Trackpad -->
				<path d="M 335 607 L 465 607 L 468 642 L 332 642 Z" fill="rgba(6, 182, 212, 0.15)" stroke="rgba(6, 182, 212, 0.5)" stroke-width="2"/>
			</svg>
			<button id="downloadSvgBtn" class="download-logo-btn">
				Download SVG (800x800)
			</button>
		</div>

		<!-- Navbar Icon -->
		<div class="logo-container">
			<h3 style="margin-bottom: 1rem; color: #fff;">Navbar Icon (Scalable)</h3>
			<div style="background: #1a1a2e; padding: 2rem; border-radius: 8px; display: inline-block;">
				<svg id="navbarIconSvg" width="64" height="64" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
					<defs>
						<linearGradient id="navbarLsGradient" x1="0%" y1="50%" x2="100%" y2="50%">
							<stop offset="0%" stop-color="#06b6d4"/>
							<stop offset="100%" stop-color="#a855f7"/>
						</linearGradient>
					</defs>
					<text x="50" y="65" font-family="'Fira Code', monospace" font-size="60" font-weight="bold" fill="url(#navbarLsGradient)" text-anchor="middle">LS</text>
				</svg>
			</div>
			<button id="downloadNavbarIconBtn" class="download-logo-btn">
				Download Navbar Icon SVG
			</button>
		</div>
	</section>

	<!-- React Test Component -->
	<section style="background: #000; padding: 3rem 2rem;">
		<div style="max-width: 1200px; margin: 0 auto;">
			<ReactTest client:load />
		</div>
	</section>

	<!-- shadcn/ui Test Component -->
	<section style="background: #fff; padding: 3rem 2rem;">
		<div style="max-width: 1200px; margin: 0 auto;">
			<ShadcnTest client:load />
		</div>
	</section>

	<!-- Date Picker Test Component -->
	<section style="background: #f8fafc; padding: 3rem 2rem;">
		<div style="max-width: 1200px; margin: 0 auto;">
			<DatePickerTest client:load />
		</div>
	</section>

	<!-- Color Bends Test Component -->
	<section style="background: #000; padding: 3rem 2rem;">
		<div style="max-width: 1200px; margin: 0 auto;">
			<ColorBendsTest client:load />
		</div>
	</section>

	<!-- Color Palette Reference -->
	<section class="color-palette-section">
		<div class="palette-container">
			<h1 class="palette-title">Color Palette Reference</h1>
			<p class="palette-subtitle">Complete design system color documentation</p>

			<!-- Dark Mode Colors -->
			<div class="palette-group">
				<h2 class="palette-group-title">Dark Mode (Default)</h2>

				<div class="palette-category">
					<h3>Backgrounds</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #0a1128;"></div>
							<div class="color-info">
								<span class="color-name">Primary Background</span>
								<span class="color-hex">#0a1128</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #0f1a35;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Background</span>
								<span class="color-hex">#0f1a35</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #162544;"></div>
							<div class="color-info">
								<span class="color-name">Tertiary Background</span>
								<span class="color-hex">#162544</span>
							</div>
						</div>
					</div>
				</div>

				<div class="palette-category">
					<h3>Text</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #e4e4e7;"></div>
							<div class="color-info">
								<span class="color-name">Primary Text</span>
								<span class="color-hex">#e4e4e7</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #a1a1aa;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Text</span>
								<span class="color-hex">#a1a1aa</span>
							</div>
						</div>
					</div>
				</div>

				<div class="palette-category">
					<h3>Accent Colors</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #60a5fa;"></div>
							<div class="color-info">
								<span class="color-name">Primary Accent (Blue)</span>
								<span class="color-hex">#60a5fa</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #818cf8;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Accent (Indigo)</span>
								<span class="color-hex">#818cf8</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #fbbf24;"></div>
							<div class="color-info">
								<span class="color-name">Accent Yellow</span>
								<span class="color-hex">#fbbf24</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #34d399;"></div>
							<div class="color-info">
								<span class="color-name">Accent Green</span>
								<span class="color-hex">#34d399</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #a855f7;"></div>
							<div class="color-info">
								<span class="color-name">Accent Purple</span>
								<span class="color-hex">#a855f7</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #ec4899;"></div>
							<div class="color-info">
								<span class="color-name">Pink Accent</span>
								<span class="color-hex">#ec4899</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #fb923c;"></div>
							<div class="color-info">
								<span class="color-name">Orange Accent</span>
								<span class="color-hex">#fb923c</span>
							</div>
						</div>
					</div>
				</div>

				<div class="palette-category">
					<h3>Code Syntax Highlighting</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #c792ea;"></div>
							<div class="color-info">
								<span class="color-name">Keywords</span>
								<span class="color-hex">#c792ea</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #c3e88d;"></div>
							<div class="color-info">
								<span class="color-name">Strings</span>
								<span class="color-hex">#c3e88d</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #82aaff;"></div>
							<div class="color-info">
								<span class="color-name">Properties</span>
								<span class="color-hex">#82aaff</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #697098;"></div>
							<div class="color-info">
								<span class="color-name">Comments</span>
								<span class="color-hex">#697098</span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Light Mode Colors -->
			<div class="palette-group">
				<h2 class="palette-group-title">Light Mode</h2>

				<div class="palette-category">
					<h3>Backgrounds</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #ffffff; border: 1px solid #e5e7eb;"></div>
							<div class="color-info">
								<span class="color-name">Primary Background</span>
								<span class="color-hex">#ffffff</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #f8fafc;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Background</span>
								<span class="color-hex">#f8fafc</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #f1f5f9;"></div>
							<div class="color-info">
								<span class="color-name">Tertiary Background</span>
								<span class="color-hex">#f1f5f9</span>
							</div>
						</div>
					</div>
				</div>

				<div class="palette-category">
					<h3>Text</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #0f172a;"></div>
							<div class="color-info">
								<span class="color-name">Primary Text</span>
								<span class="color-hex">#0f172a</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #475569;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Text</span>
								<span class="color-hex">#475569</span>
							</div>
						</div>
					</div>
				</div>

				<div class="palette-category">
					<h3>Accent Colors</h3>
					<div class="color-grid">
						<div class="color-item">
							<div class="color-swatch" style="background: #2563eb;"></div>
							<div class="color-info">
								<span class="color-name">Primary Accent (Blue)</span>
								<span class="color-hex">#2563eb</span>
							</div>
						</div>
						<div class="color-item">
							<div class="color-swatch" style="background: #4f46e5;"></div>
							<div class="color-info">
								<span class="color-name">Secondary Accent (Indigo)</span>
								<span class="color-hex">#4f46e5</span>
							</div>
						</div>
						<div class="color-item">
