	<script>
		// Draw Isometric Diamond with Electric Gradient
		function drawIsometricDiamond() {
			const canvas = document.getElementById('diamondCanvas');
			if (!canvas) return;

			const ctx = canvas.getContext('2d');
			const dpr = window.devicePixelRatio || 1;

			// Set canvas size
			const size = Math.min(window.innerWidth, window.innerHeight) * 0.7;
			canvas.width = size * dpr;
			canvas.height = size * dpr;
			canvas.style.width = `${size}px`;
			canvas.style.height = `${size}px`;
			ctx.scale(dpr, dpr);

			const centerX = size / 2;
			const centerY = size / 2;
			const dotSpacing = 6;
			const dotSize = 2.5;
			const layers = 25; // Number of layers in each direction

			// Helper to convert 3D to isometric 2D
			function toIso(x, y, z) {
				const isoX = (x - y) * dotSpacing;
				const isoY = (x + y) * dotSpacing * 0.5 - z * dotSpacing;
				return { x: centerX + isoX, y: centerY + isoY };
			}

			// Create gradient
			const gradient = ctx.createLinearGradient(
				centerX - 200, centerY - 200,
				centerX + 200, centerY + 200
			);
			gradient.addColorStop(0, '#a855f7');    // purple
			gradient.addColorStop(0.2, '#ec4899');  // pink
			gradient.addColorStop(0.35, '#f97316'); // orange
			gradient.addColorStop(0.5, '#fbbf24');  // yellow
			gradient.addColorStop(0.65, '#34d399'); // teal
			gradient.addColorStop(0.8, '#3b82f6');  // blue
			gradient.addColorStop(1, '#8b5cf6');    // purple

			// Draw with glow
			ctx.shadowBlur = 60;
			ctx.shadowColor = 'rgba(236, 72, 153, 0.6)';

			// Draw 4 diamond faces
			const faces = [];

			// Top face (horizontal)
			for (let x = -layers; x <= layers; x++) {
				for (let y = -layers; y <= layers; y++) {
					if (Math.abs(x) + Math.abs(y) <= layers) {
						faces.push({ x, y, z: layers - Math.abs(x) - Math.abs(y), face: 'top' });
					}
				}
			}

			// Left face
			for (let x = -layers; x <= 0; x++) {
				for (let z = 0; z <= layers; z++) {
					const y = -layers + Math.abs(x);
					if (y <= 0 && z <= layers - Math.abs(x) - Math.abs(y)) {
						faces.push({ x, y, z, face: 'left' });
					}
				}
			}

			// Right face
			for (let y = -layers; y <= 0; y++) {
				for (let z = 0; z <= layers; z++) {
					const x = layers - Math.abs(y);
					if (x >= 0 && z <= layers - Math.abs(x) - Math.abs(y)) {
						faces.push({ x, y, z, face: 'right' });
					}
				}
			}

			// Sort faces by depth (back to front)
			faces.sort((a, b) => {
				const depthA = a.x + a.y - a.z;
				const depthB = b.x + b.y - b.z;
				return depthA - depthB;
			});

			// Draw all dots
			faces.forEach(point => {
				const pos = toIso(point.x, point.y, point.z);

				// Calculate opacity based on depth
				const depth = point.z / layers;
				const opacity = 0.4 + depth * 0.6;

				ctx.beginPath();
				ctx.fillStyle = gradient;
				ctx.globalAlpha = opacity;
				ctx.arc(pos.x, pos.y, dotSize, 0, Math.PI * 2);
				ctx.fill();
			});

			// Reset
			ctx.shadowBlur = 0;
			ctx.globalAlpha = 1;
		}

		// Draw Vector Cube (for Features Grid)
		function drawVectorCube() {
			const canvas = document.getElementById('vectorCube');
			if (!canvas) return;

			const ctx = canvas.getContext('2d');
			const dpr = window.devicePixelRatio || 1;
			const size = 300;

			canvas.width = size * dpr;
			canvas.height = size * dpr;
			canvas.style.width = `${size}px`;
			canvas.style.height = `${size}px`;
			ctx.scale(dpr, dpr);

			const centerX = size / 2;
			const centerY = size / 2;
			const cubeSize = 80;

			// Draw isometric cube wireframe
			ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
			ctx.lineWidth = 1.5;

			// Helper function for isometric projection
			function iso(x, y, z) {
				const isoX = (x - y) * 0.866;
				const isoY = (x + y) * 0.5 - z;
				return { x: centerX + isoX, y: centerY + isoY };
			}

			// Draw cube edges
			const corners = [
				[-cubeSize, -cubeSize, -cubeSize],
				[cubeSize, -cubeSize, -cubeSize],
				[cubeSize, cubeSize, -cubeSize],
				[-cubeSize, cubeSize, -cubeSize],
				[-cubeSize, -cubeSize, cubeSize],
				[cubeSize, -cubeSize, cubeSize],
				[cubeSize, cubeSize, cubeSize],
				[-cubeSize, cubeSize, cubeSize]
			];

			const edges = [
				[0, 1], [1, 2], [2, 3], [3, 0], // Bottom
				[4, 5], [5, 6], [6, 7], [7, 4], // Top
				[0, 4], [1, 5], [2, 6], [3, 7]  // Sides
			];

			edges.forEach(([start, end]) => {
				const p1 = iso(...corners[start]);
				const p2 = iso(...corners[end]);
				ctx.beginPath();
				ctx.moveTo(p1.x, p1.y);
				ctx.lineTo(p2.x, p2.y);
				ctx.stroke();
			});

			// Draw green dots around the cube
			const dots = [
				{ x: -cubeSize - 40, y: 0, z: 0, color: '#10b981' },
				{ x: cubeSize + 40, y: 0, z: 0, color: '#10b981' },
				{ x: 0, y: -cubeSize - 40, z: 0, color: '#10b981' },
				{ x: 0, y: cubeSize + 40, z: 0, color: '#10b981' },
				{ x: 0, y: 0, z: -cubeSize - 40, color: '#10b981' },
				{ x: 0, y: 0, z: cubeSize + 40, color: '#10b981' },
				{ x: -cubeSize - 20, y: -cubeSize - 20, z: 20, color: '#34d399' },
				{ x: cubeSize + 20, y: -cubeSize - 20, z: -20, color: '#34d399' },
				{ x: -cubeSize - 20, y: cubeSize + 20, z: -20, color: '#34d399' },
				{ x: cubeSize + 20, y: cubeSize + 20, z: 20, color: '#34d399' },
			];

			// Draw connecting lines with dots
			ctx.setLineDash([2, 4]);
			ctx.strokeStyle = 'rgba(255, 255, 255, 0.15)';
			dots.forEach(dot => {
				const dotPos = iso(dot.x, dot.y, dot.z);
				const nearestCorner = corners.reduce((nearest, corner) => {
					const cornerPos = iso(...corner);
					const dist = Math.hypot(cornerPos.x - dotPos.x, cornerPos.y - dotPos.y);
					return dist < nearest.dist ? { pos: cornerPos, dist } : nearest;
				}, { dist: Infinity });

				ctx.beginPath();
				ctx.moveTo(dotPos.x, dotPos.y);
				ctx.lineTo(nearestCorner.pos.x, nearestCorner.pos.y);
				ctx.stroke();
			});
			ctx.setLineDash([]);

			// Draw dots
			dots.forEach(dot => {
				const pos = iso(dot.x, dot.y, dot.z);
				ctx.fillStyle = dot.color;
				ctx.shadowBlur = 10;
				ctx.shadowColor = dot.color;
				ctx.beginPath();
				ctx.arc(pos.x, pos.y, 4, 0, Math.PI * 2);
				ctx.fill();
			});

			ctx.shadowBlur = 0;
		}

