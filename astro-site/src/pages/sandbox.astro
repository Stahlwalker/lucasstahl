			keyboardGradient.addColorStop(1, 'rgba(168, 85, 247, 0.3)');

			// Keyboard base (trapezoid perspective with rounded corners)
			const keyboardRadius = 10;
			ctx.fillStyle = keyboardGradient;
			ctx.beginPath();

			// Top left corner (rounded)
			ctx.moveTo(centerX - laptopWidth/2 + keyboardRadius, keyboardY);
			ctx.arcTo(centerX - laptopWidth/2, keyboardY, centerX - laptopWidth/2, keyboardY + keyboardRadius, keyboardRadius);

			// Left side
			ctx.lineTo(centerX - laptopWidth/2 - 30, keyboardY + keyboardHeight - keyboardRadius);

			// Bottom left corner (rounded)
			ctx.arcTo(centerX - laptopWidth/2 - 30, keyboardY + keyboardHeight, centerX - laptopWidth/2 - 30 + keyboardRadius, keyboardY + keyboardHeight, keyboardRadius);

			// Bottom side
			ctx.lineTo(centerX + laptopWidth/2 + 30 - keyboardRadius, keyboardY + keyboardHeight);

			// Bottom right corner (rounded)
			ctx.arcTo(centerX + laptopWidth/2 + 30, keyboardY + keyboardHeight, centerX + laptopWidth/2 + 30, keyboardY + keyboardHeight - keyboardRadius, keyboardRadius);

			// Right side
			ctx.lineTo(centerX + laptopWidth/2, keyboardY + keyboardRadius);

			// Top right corner (rounded)
			ctx.arcTo(centerX + laptopWidth/2, keyboardY, centerX + laptopWidth/2 - keyboardRadius, keyboardY, keyboardRadius);

			ctx.closePath();
			ctx.fill();

			// Keyboard border
			ctx.strokeStyle = '#06b6d4';
			ctx.lineWidth = 2;
			ctx.shadowBlur = 15;
			ctx.shadowColor = 'rgba(6, 182, 212, 0.5)';
