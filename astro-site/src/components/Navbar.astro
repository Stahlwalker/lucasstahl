<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navLinks = document.querySelectorAll('[data-nav-link]');
        navLinks.forEach(link => {
            // Handle navigation for both click and touch
            const handleNavigation = function(e) {
                e.preventDefault();
                e.stopPropagation();
                const path = this.getAttribute('href');
                const fullUrl = window.location.origin + path;
                window.location.href = fullUrl;
            };

            link.addEventListener('click', handleNavigation);
            link.addEventListener('touchend', handleNavigation);
        });

        // Search button handlers
        const searchButton = document.getElementById('searchButton');
        const mobileSearchButton = document.getElementById('mobileSearchButton');

        if (searchButton) {
            searchButton.addEventListener('click', function() {
                if (window.openSearchModal) {
                    window.openSearchModal();
                }
            });
        }

        if (mobileSearchButton) {
            mobileSearchButton.addEventListener('click', function() {
                if (window.openSearchModal) {
                    window.openSearchModal();
                }
            });
        }

        // Improved mobile touch handling for navbar hamburger menu
        const navbarToggler = document.querySelector('.navbar-toggler');
        const navbarCollapse = document.getElementById('navbarNav');

        if (navbarToggler && navbarCollapse) {
            // Enhanced click handler
            navbarToggler.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                navbarCollapse.classList.toggle('show');
                const isExpanded = navbarCollapse.classList.contains('show');
                navbarToggler.setAttribute('aria-expanded', isExpanded.toString());
            });

            // Touch event for better mobile support
            navbarToggler.addEventListener('touchend', function(e) {
                e.preventDefault();
                e.stopPropagation();
                navbarCollapse.classList.toggle('show');
                const isExpanded = navbarCollapse.classList.contains('show');
                navbarToggler.setAttribute('aria-expanded', isExpanded.toString());
            });

            // Close menu when clicking a nav link
            const navMenuLinks = navbarCollapse.querySelectorAll('.nav-link');
            navMenuLinks.forEach(link => {
                link.addEventListener('click', function() {
                    navbarCollapse.classList.remove('show');
                    navbarToggler.setAttribute('aria-expanded', 'false');
                });
            });
        }

        // A/B Test: Gems vs Resources navbar text
        const gemsNavLink = document.getElementById('gemsNavLink');

        if (gemsNavLink && window.posthog) {
            // Get feature flag variant
            const variant = window.posthog.getFeatureFlag('navbar-gems-test');

            // Update text based on variant
            if (variant === 'test') {
                gemsNavLink.textContent = 'Resources';
            }

            // Track clicks on the Gems/Resources nav link
            gemsNavLink.addEventListener('click', function() {
                if (window.posthog) {
                    window.posthog.capture('navbar_gems_clicked', {
                        variant: variant || 'control',
                        link_text: gemsNavLink.textContent
                    });
                }
            });
        }
    });
</script>
